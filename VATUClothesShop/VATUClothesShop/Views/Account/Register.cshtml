@model RegisterViewModel

@{
    ViewBag.Title = "Register User";
}

<h1 class="m-4 text-success">ĐĂNG KÝ TÀI KHOẢN</h1>
<div style="width: 80%; padding-left: 50px">
    <form asp-controller="Account" asp-action="Register" method="post" class="mt-2">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="FullName"></label>
            </div>
            <div class="col-sm-8">
                <input placeholder="From Nhân Chăn Rau with Love <3" asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="Email"></label>
            </div>
            <div class="col-sm-8">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="Password"></label>
            </div>
            <div class="col-sm-8">
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="ConfirmPassword"></label>
            </div>
            <div class="col-sm-8">
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="PhoneNumber"></label>
            </div>
            <div class="col-sm-8">
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="Address"></label>
            </div>
            <div class="col-sm-8">
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-primary">Đăng ký</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Quay lại</a>
            </div>
        </div>
    </form>
</div>


@section Scripts{
    <script>
        $(document).ready(function () {
            $(".custom-file-input").on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
            });
        });
    </script>
}